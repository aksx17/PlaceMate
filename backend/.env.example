MONGODB_URI=mongodb://localhost:27017/placemate
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/placemate

# Notes:
# - Copy this file to `.env` in the `backend/` folder and update the connection string.
# - If you run MongoDB locally, make sure the `mongod` service is running.
# - If you use Atlas, whitelist your IP and set the correct username/password.
# Server
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/placemate
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/placemate

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Gemini AI
# Get your API key from: https://makersuite.google.com/app/apikey
# Model: gemini-2.5-pro (recommended) or gemini-1.5-pro
GEMINI_API_KEY=your_gemini_api_key_here

# GitHub
# Get token from: https://github.com/settings/tokens
# Required scopes: public_repo, read:user
GITHUB_TOKEN=your_github_personal_access_token

# LinkedIn (optional - if using official API)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# ReadyPlayerMe (optional)
READY_PLAYER_ME_API_KEY=your_rpm_api_key

# CORS
CORS_ORIGIN=http://localhost:3000

# Scraper Settings
SCRAPER_INTERVAL=0 */6 * * *
MAX_JOBS_PER_SITE=100
